<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="@dimen/row_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:layout_marginTop="@dimen/icon_top_margin"
            android:background="#FF0000" />

        <TextView
            android:id="@+id/row_icon_text"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:layout_marginTop="@dimen/icon_top_margin"
            android:gravity="center"
            android:text="D"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/linearLayout_left_margin"
        android:layout_marginRight="@dimen/linearLayout_right_margin"
        android:layout_toRightOf="@id/row_icon_layout"
        android:orientation="vertical">


        <TextView
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_text_padding_top"
            android:text="Title"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="@dimen/primary_text_font_size" />

        <TextView
            android:id="@+id/row_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/row_text_padding_bottom"
            android:text="Subtitle"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/secondary_text_font_size" />
    </LinearLayout>

</LinearLayout>